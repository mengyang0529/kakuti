# Kakuti Fullstack Docker Environment Configuration
# Copy this file to .env.docker and update values

# === Required API Keys ===
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# === API Authentication ===
REQUIRE_API_KEY=true
API_KEY=your-secure-api-key-here

# === LLM Configuration ===
LLM_PROVIDER=gemini
GEMINI_REQUEST_TIMEOUT=30

# === Database Configuration ===
DB_TYPE=sqlite
DOCMIND_DB=/app/backend/storage/docmind.db

# === RAG Configuration ===
RAG_TOP_K=6
RAG_MAX_CONTEXT_TOKENS=1800
RAG_BLOCK_MAX_TOKENS=800
RAG_BLOCK_TARGET_TOKENS=400
RAG_BLOCK_OVERLAP_TOKENS=80
RAG_MMR_LAMBDA=0.5
RAG_SIMILARITY_THRESHOLD=0.65
RAG_EMBEDDING_MODEL=text-embedding-004
RAG_GENERATION_MODEL=gemini-1.5-flash

# === CORS Configuration ===
ALLOWED_ORIGINS=http://localhost:8080,https://mengyang0529.github.io,https://kakuti.xyz

# === Other Configuration ===
HF_HOME=/tmp
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_BURST=60

# === Container Specific ===
PORT=8080
BACKEND_PORT=8001
